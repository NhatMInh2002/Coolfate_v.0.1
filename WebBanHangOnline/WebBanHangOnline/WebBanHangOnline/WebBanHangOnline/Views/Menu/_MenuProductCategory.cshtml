@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
<style>
    .banner_item {
        width: 100%;
        height: 200px;
        background-size: cover;
        background-position: center center;
        transition: transform 0.3s, opacity 0.3s; /* Chỉnh transition cho transform và opacity */
        opacity: 1; /* Đặt opacity mặc định là 1 */
    }

        .banner_item:hover {
            transform: scale(1.1);
        }

    .banner:hover .banner_item {
        opacity: 0.7; /* Khi hover, đặt opacity của tất cả các ảnh về 0.7 */
    }

        .banner:hover .banner_item:hover {
            opacity: 1; /* Khi hover 1 ảnh, đặt opacity của ảnh đó về 1 */
        }

</style>
@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h2>Danh mục nổi bật</h2>
            </div>
        </div>
    </div>
    <div class="banner">
        <div class="container">
            @for (var i = 0; i < Model.Count(); i += 3)
            {
                <div class="row">
                    @for (var j = i; j < Math.Min(i + 3, Model.Count()); j++)
                    {
                        var item = Model.ElementAt(j);
                        <div class="col-md-4">
                            <div class="banner_item align-items-center" style="background-image: url(@item.Icon)">
                                <div class="banner_category">
                                    <a href="danh-muc-san-pham/@item.Alias-@item.Id">@item.Title</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}

